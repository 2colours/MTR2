@page
@model IndexModel
@{
	ViewData["Title"] = "The Magyartanulás Repository";
}
<div class="row">
	<div class="col-lg-9 col-md-6 col-sm-12 text-center">
		@Html.Raw(Model.RenderedContent)
	</div>
	<div class="col-lg-3 col-md-6 col-sm text-center">
<h2>Recent Posts</h2>
		@foreach (var article in Model.BlogArticles) {
				<vc:blog-article-header post-dto="article"></vc:blog-article-header>
		}
	</div>
</div>