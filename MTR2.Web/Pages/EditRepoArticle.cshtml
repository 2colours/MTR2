@page
@model MTR2.Web.Pages.EditRepoArticleModel
@{
	ViewData["Title"] = $"Edit Article - {Model.RepoArticle.Title}";
}

<h1>EditRepoArticle</h1>


<div class="row">
	<form method="post" class="col-md-12">
		<input type="hidden" name="Id" value="@Model.RepoArticle.Id" />
		<div class="form-group">
			<label for="Title_bind">Title</label>
			<input id="Title_bind" name="Title" class="form-control" value="@Model.RepoArticle.Title" />
		</div>
		<div class="form-group">
			<label for="Content_bind"></label>
			<textarea id="Content_bind" name="Content" class="form-control">@Model.RepoArticle.Content</textarea>
		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Save</button>
		</div>
	</form>
</div>
@section Scripts {
	<script src="~/simplemde/simplemde.min.js"></script>
	<script>
		let simplemde = new SimpleMDE();
	</script>
}
@section Styles {
	<link rel="stylesheet" href="~/simplemde/simplemde.min.css">

}
